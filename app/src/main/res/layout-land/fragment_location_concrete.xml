<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_location_concrete"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/locations_concrete_parent_info_component"
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/locations_concrete_major_component1"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/locations_concrete_major_component2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/locations_concrete_major_component3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </LinearLayout>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/location_concrete_fragment_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout="@layout/recycler_view_grid" />

</LinearLayout>

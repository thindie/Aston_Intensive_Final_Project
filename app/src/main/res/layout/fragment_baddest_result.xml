<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/fragment_stub"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image_heart"
        android:layout_width="100dp"
        android:paddingTop="100dp"
        android:layout_gravity="center|center_vertical"
        android:layout_height="100dp"
        android:layout_weight=".6"
        android:src="@drawable/stub_some_bad_result"
        tools:ignore="ContentDescription" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text"
        android:layout_gravity="center|center_vertical"
        android:text="@string/message_baddest_result"
        android:layout_weight="0.2"/>


    <Button
        android:id="@+id/baddest_result_retry"
        android:layout_width="match_parent"
        android:layout_weight="0.05"
        android:padding="5dp"
        android:textAlignment="center"
        style="@style/TextAppearance.AppCompat.Body1"
        android:text="@string/button_okay_got_it_retry"
        android:layout_height="20dp"/>

    <Button
        android:id="@+id/baddest_result_finish_activity"
        android:layout_width="match_parent"
        android:layout_weight="0.05"
        android:padding="5dp"
        android:textAlignment="center"
        style="@style/TextAppearance.AppCompat.Body1"
        android:text="@string/button_next_time"
        android:layout_height="20dp"/>

</LinearLayout>